 </animation>

 <animation>
  <type>rotate</type>
  <object-name>LMainGearDoorOuter</object-name>
  <property>/gear/gear/position-norm</property>
  <interpolation>
    <entry><ind>0</ind><dep>90</dep></entry>
    <entry><ind>0.9</ind><dep>0</dep></entry>
    <entry><ind>1</ind><dep>0</dep></entry>
  </interpolation>
  <center>
   <x-m> 1.92</x-m>
