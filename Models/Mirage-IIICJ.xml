<!-- A wrapper file for the Brazilian Mirage F-103E 3D model -->

<PropertyList>

 <path>mirage3c.ac</path>
 
 <nasal>
    <load>
      var livery_update = aircraft.livery_update.new("Aircraft/FGR2/Models/Liveries", 10);
    </load>
    <unload>
      livery_update.stop();
    </unload>
  </nasal>
 
 <!-- fuselage -->
  <animation>
        <type>material</type>
        <object-name>fuselage-main</object-name>
        <object-name>Lintake</object-name>
		<object-name>InletCone</object-name>
		<object-name>RInlet</object-name>
		
        <property-base>sim/model/livery</property-base>
        <texture-prop>texture-fuselage</texture-prop>
        <texture>mainfuselage.png</texture>
    </animation>
	
	<!-- fuselage top -->
  <animation>
        <type>material</type>
        <object-name>fuselage-top</object-name>
        
        <property-base>sim/model/livery</property-base>
        <texture-prop>texture-fuselagetop</texture-prop>
        <texture>fuselage-top.png</texture>
    </animation>
 
 <!-- fuselage nose -->
  <animation>
        <type>material</type>
        <object-name>fuselage-fwd</object-name>
		<object-name>Pitot</object-name>
        <object-name>WindscreenFrame</object-name>
		 <object-name>fuselage</object-name>
		
        <property-base>sim/model/livery</property-base>
        <texture-prop>texture-nose</texture-prop>
        <texture>nose.png</texture>
    </animation>
	
	
 
 <!-- fuselage rear -->
  <animation>
        <type>material</type>
        <object-name>VTail</object-name>
        <object-name>Rudder</object-name>
		<object-name>VentralFin</object-name>
		
		
        <property-base>sim/model/livery</property-base>
        <texture-prop>texture-fuselagerear</texture-prop>
        <texture>tail.png</texture>
    </animation>
	
	<!-- fuselage bottom -->
  <animation>
        <type>material</type>
        <object-name>fuselage-bottom</object-name>
        <object-name>NoseGearDoorSide</object-name>
		<object-name>NoseGearStrutDoor</object-name>
		<object-name>NoseWellCoverFwd</object-name>
		 <object-name>NoseWellCoverAft</object-name>
		<object-name>fuselage-fwd-bottom</object-name>
        <property-base>sim/model/livery</property-base>
        <texture-prop>texture-fuselagebottom</texture-prop>
        <texture>fuselagelow.png</texture>
    </animation>
 
 
 <!-- upper wing -->
    <animation>
        <type>material</type>
        <object-name>LWing-top</object-name>
		
        <object-name>LSpeedbrake-upper</object-name>
		<object-name>LAileron</object-name>
		<object-name>LElevator</object-name>
		<object-name>RWing-top</object-name>
		
		<object-name>RSpeedbrake-upper</object-name>
		<object-name>RElevator</object-name>
		<object-name>RAileron</object-name>
        <property-base>sim/model/livery</property-base>
        <texture-prop>texture-upperwings</texture-prop>
        <texture>wing_top.png</texture>
    </animation>
	
	<!-- lower wing -->
    <animation>
        <type>material</type>
        <object-name>RWing</object-name>
        <object-name>RSpeedbrake-lower</object-name>
		<object-name>LWing</object-name>
		<object-name>LSpeedbrake-lower</object-name>
				
        <property-base>sim/model/livery</property-base>
        <texture-prop>texture-lwings</texture-prop>
        <texture>wings_bottom.png</texture>
    </animation>
	
	  
  <!-- tanks -->
	<animation>
        <type>material</type>
        <object-name>WingTank</object-name>
        <object-name>RPylon</object-name>
		<object-name>MissleRail</object-name>
		<object-name>LPylon</object-name>
		<object-name>MissleRail</object-name>
		
        <property-base>sim/model/livery</property-base>
        <texture-prop>texture-tanks</texture-prop>
        <texture>tank.png</texture>
    </animation>
	
	<!-- gear -->
	<animation>
        <type>material</type>
        <object-name>LMainGearDoorOuter</object-name>
         <object-name>MainWellCoverOuter</object-name>
		 <object-name>MainWellCoverInner</object-name>
		  <object-name>LMainGearDoorInner</object-name>
		   <object-name>RMainGearDoorInner</object-name>
		    <object-name>MainWellCoverInner</object-name>
			 <object-name>MainWellCoverOuter</object-name>
			 <object-name>RMainGearDoorOuter</object-name>
			  <object-name>MainWellTop</object-name>
			   <object-name>MainWellSides</object-name>
        <property-base>sim/model/livery</property-base>
        <texture-prop>texture-gear</texture-prop>
        <texture>Gear1.png</texture>
    </animation>

	


