 <animation>
  <type>select</type>
  <object-name>LMainGear</object-name>
  <object-name>RMainGear</object-name>
  <object-name>LMainGearDoorOuter</object-name>
  <object-name>RMainGearDoorOuter</object-name>
  <object-name>LMainGearTire</object-name>
  <object-name>RMainGearTire</object-name>
  <condition>
   <greater-than>
    <property>gear/gear[1]/position-norm</property>
    <value>0.05</value>
   </greater-than>
  </condition>
 </animation>

 <animation>
  <type>select</type>
  <object-name>MainGearBraces</object-name>
  <condition>
   <greater-than>
    <property>gear/gear[1]/position-norm</property>
    <value>0.95</value>
   </greater-than>
  </condition>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>LMainGear</object-name>
  <object-name>LMainGearTire</object-name>
  <property>/gear/gear/position-norm</property>
  <interpolation>
    <entry><ind>0</ind><dep>80</dep></entry>
    <entry><ind>0.1</ind><dep>80</dep></entry>
    <entry><ind>1</ind><dep>0</dep></entry>
  </interpolation>
  <center>
   <x-m> 1.92</x-m>
   <y-m>-1.67</y-m>
   <z-m>-0.15</z-m>
  </center>
  <axis>
   <x>1</x>
   <y>0.4</y>
   <z>0</z>
  </axis>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>RMainGear</object-name>
  <object-name>RMainGearTire</object-name>
  <property>/gear/gear/position-norm</property>
  <interpolation>
    <entry><ind>0</ind><dep>80</dep></entry>
    <entry><ind>0.1</ind><dep>80</dep></entry>
    <entry><ind>1</ind><dep>0</dep></entry>
  </interpolation>
  <center>
   <x-m> 1.92</x-m>
   <y-m> 1.67</y-m>
   <z-m>-0.15</z-m>
  </center>
  <axis>
   <x>-1</x>
   <y>0.4</y>
   <z>0</z>
  </axis>
 </animation>

 <animation>
  <type>spin</type>
  <object-name>LMainGearTire</object-name>
  <property>fdm/jsbsim/gear/unit[1]/wheel-speed-fps</property>
